name: Schema Validation (example)

on:
  pull_request:
    paths:
      - 'db/ddl/**.sql'
      - 'scripts/**'
      - 'docs/**'
      - '.github/workflows/schema-validation.yml'

jobs:
  schema-validation:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: pnpm/action-setup@v3
        with: { version: 9 }

      - uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'pnpm'

      - name: Install
        run: pnpm install --frozen-lockfile || pnpm install

      - name: Impact analysis
        run: node scripts/analyze-schema-impact.mjs --table ${TABLE:-collection_records}
        env:
          TABLE: ${{ vars.SCHEMA_IMPACT_TABLE || 'collection_records' }}

      - name: Report
        run: echo "Impact analysis completed."
